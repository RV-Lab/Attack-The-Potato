<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".FTopAleatorio">

    <com.google.android.gms.ads.AdView
        android:id="@+id/anuncioTopAleatorio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_gravity="bottom"
        android:layout_marginBottom="62dp"
        app:adSize="SMART_BANNER"
        app:adUnitId="ca-app-pub-1008782396803681/3430455617"></com.google.android.gms.ads.AdView>

    <ListView
        android:id="@+id/lista_topaleatorio"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/anuncioTopAleatorio"
        android:layout_alignParentStart="true"
        />

</RelativeLayout>